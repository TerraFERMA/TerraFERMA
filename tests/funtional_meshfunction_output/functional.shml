<?xml version='1.0' encoding='utf-8'?>
<harness_options>
  <length>
    <string_value>short</string_value>
  </length>
  <owner>
    <string_value lines="1">cwilson</string_value>
  </owner>
  <description>
    <string_value lines="1">A simple test of mesh function output of functionals.</string_value>
  </description>
  <simulations>
    <simulation name="Simulation">
      <input_file>
        <string_value type="filename" lines="1">functional.tfml</string_value>
      </input_file>
      <variables>
        <variable name="facets">
          <string_value type="code" lines="20" language="python">from dolfin import MeshFunction, UnitSquareMesh
mesh = UnitSquareMesh(1,1,'crossed')
facets = MeshFunction("double", mesh, "functional_System_Field_int_1_facetfunction.xml").array()</string_value>
        </variable>
        <variable name="cells">
          <string_value type="code" lines="20" language="python">from dolfin import MeshFunction, UnitSquareMesh
mesh = UnitSquareMesh(1,1,'crossed')
cells = MeshFunction("double", mesh, "functional_System_Field_int_1_cellfunction.xml").array()</string_value>
        </variable>
      </variables>
    </simulation>
  </simulations>
  <tests>
    <test name="facets">
      <string_value type="code" lines="20" language="python">import numpy
assert(numpy.all(abs(facets-1)&lt;1.e-6))</string_value>
    </test>
    <test name="cells">
      <string_value lines="20" type="code" language="python">import numpy
assert(numpy.all(abs(cells-1)&lt;1.e-6))</string_value>
    </test>
  </tests>
</harness_options>
