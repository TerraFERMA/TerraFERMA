<?xml version='1.0' encoding='utf-8'?>
<harness_options>
  <length>
    <string_value>short</string_value>
  </length>
  <owner>cwilson</owner>
  <description>A very simple simulation of Poisson with all neumann boundary conditions.  Tests that the integral constraint is satisfied.</description>
  <simulations>
    <simulation name="NeumannPoisson">
      <input_file>
        <string_value lines="1" type="filename">neumann_poisson.tfml</string_value>
      </input_file>
      <variables>
        <variable name="integral">
          <string_value lines="20" type="code" language="python">from buckettools.statfile import parser
stat = parser("poisson.stat")
integral = stat["SNESPoisson"]["Field"]["Integral"][1]</string_value>
        </variable>
      </variables>
    </simulation>
  </simulations>
  <tests>
    <test name="integral_small">
      <string_value lines="20" type="code" language="python">assert abs(integral) &lt; 1.e-10</string_value>
    </test>
  </tests>
</harness_options>
