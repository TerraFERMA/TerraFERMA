<?xml version='1.0' encoding='utf-8'?>
<harness_options>
  <length>
    <string_value>short</string_value>
  </length>
  <owner>cwilson</owner>
  <tags>not:branch:dolfin-master</tags>
  <description>A test of simple, Courant number based, adaptive timestepping.</description>
  <simulations>
    <simulation name="AdaptDT">
      <input_file>
        <string_value lines="1" type="filename">adaptdt.tfml</string_value>
      </input_file>
      <variables>
        <variable name="mincourant">
          <string_value lines="20" type="code" language="python">from buckettools.statfile import parser
stat = parser("adaptdt.stat")
mincourant = stat["CourantNumber"]["CourantNumber"]["min"][1:].min()</string_value>
        </variable>
        <variable name="maxcourant">
          <string_value lines="20" type="code" language="python">from buckettools.statfile import parser
stat = parser("adaptdt.stat")
maxcourant = stat["CourantNumber"]["CourantNumber"]["min"][1:].max()</string_value>
        </variable>
        <variable name="dt">
          <string_value lines="20" type="code" language="python">from buckettools.statfile import parser
stat = parser("adaptdt.stat")
dt = stat["dt"]["value"]</string_value>
        </variable>
      </variables>
    </simulation>
  </simulations>
  <tests>
    <test name="mincourant">
      <string_value lines="20" type="code" language="python">assert mincourant==10.</string_value>
    </test>
    <test name="maxcourant">
      <string_value lines="20" type="code" language="python">assert val==15.0</string_value>
    </test>
    <test name="dt">
      <string_value lines="20" type="code" language="python">import numpy
expectedval = numpy.array([ 1.    ,  1.    ,  1.    , \
                            1.1   ,  1.1   ,  \
                            1.21  ,  1.21  ,  \
                            1.331 ,  1.331 ,  \
                            1.4641,  1.4641,  \
                            1.5   ,  1.5   ,  1.5   ,    1.5   ,  1.5   ,  1.5   ])
                            
assert numpy.all(abs(dt-expectedval) &lt; 1.e-14)</string_value>
    </test>
  </tests>
</harness_options>
