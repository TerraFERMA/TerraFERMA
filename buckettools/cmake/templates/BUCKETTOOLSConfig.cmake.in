# - Try to find BucketTools
# Once done (and if successful) this will define

#  BUCKETTOOLS_FOUND        - system has BucketTools
#  BUCKETTOOLS_INCLUDE_DIRS - include directories for BucketTools
#  BUCKETTOOLS_LIBRARIES    - libraries for BuckeTools
#  BUCKETTOOLS_SHARED_DIRS  - location of shared material
#  BUCKETTOOLS_BIN          - location of executables
#  BUCKETTOOLS_VERSION_MAJOR
#  BUCKETTOOLS_VERSION_MINOR
#  BUCKETTOOLS_VERSION_STR
#  BUCKETTOOLS_TERRAFERMA_VERSION_MAJOR
#  BUCKETTOOLS_TERRAFERMA_VERSION_MINOR
#  BUCKETTOOLS_TERRAFERMA_VERSION_STR
#  BUCKETTOOLS_DOLFIN_VERSION_STR

message(STATUS "Checking for package 'BucketTools'")

if (NOT TARGET buckettools)
  include("@CMAKE_INSTALL_PREFIX@/share/buckettools/cmake/BUCKETTOOLSTargets.cmake")
endif()

# Include directories
set(BUCKETTOOLS_INCLUDE_DIRS "@CMAKE_INSTALL_PREFIX@/include")

set(BUCKETTOOLS_DEP_INCLUDE_DIRS "@BUCKETTOOLS_DEP_INCLUDE_DIRECTORIES@")

# Shared directories
set(BUCKETTOOLS_SHARED_DIRS "@CMAKE_INSTALL_PREFIX@/share")

# Executable directories
set(BUCKETTOOLS_BIN "@CMAKE_INSTALL_PREFIX@/bin")

set(BUCKETTOOLS_CXX_DEFINITIONS "-DBUCKETTOOLS_VERSION=\"@BUCKETTOOLS_VERSION@\";-DTERRAFERMA_VERSION=\"@TERRAFERMA_VERSION@\";@BUCKETTOOLS_CXX_DEFINITIONS@")

# BucketTools library
set(BUCKETTOOLS_LIBRARIES buckettools_cpp)

set(BUCKETTOOLS_CXX_FLAGS "@CMAKE_CXX_FLAGS@")

set(BUCKETTOOLS_TERRAFERMA_VERSION_MAJOR "@TERRAFERMA_VERSION_MAJOR@")
set(BUCKETTOOLS_TERRAFERMA_VERSION_MAJOR "@TERRAFERMA_VERSION_MINOR@")
set(BUCKETTOOLS_TERRAFERMA_VERSION_PATCH "@TERRAFERMA_VERSION_PATCH@")
set(BUCKETTOOLS_TERRAFERMA_VERSION_STR "@TERRAFERMA_VERSION@")

set(BUCKETTOOLS_VERSION_MAJOR "@BUCKETTOOLS_VERSION_MAJOR@")
set(BUCKETTOOLS_VERSION_MAJOR "@BUCKETTOOLS_VERSION_MINOR@")
set(BUCKETTOOLS_VERSION_MAJOR "@BUCKETTOOLS_VERSION_PATCH@")
set(BUCKETTOOLS_VERSION_STR "@BUCKETTOOLS_VERSION@")

set(BUCKETTOOLS_DOLFIN_VERSION_STR "@DOLFIN_VERSION@")

