q_element_family = 
  (
     ## Element family
     ##
     ## - Quadrature
     element family {
        # a hard coded string_value
        element string_value {
          ( "Quadrature" )
        },
        comment
     }
  )

generic_element_degree =
  (
     ## Element (or quadrature) degree
     element degree {
       integer
     }
  )

quadrature_element_degree =
  (
     ## Quadrature degree.
     ##
     ## Note that this restricts the quadrature degree of any form in which it appears and must not conflict
     ## with the degree set in the form.
     ##
     ## Importantly, this is the degree of the resulting form not the function itself!
     element degree {
       integer
     }
  )

p0_element_degree =
  (
     ## Element degree
     element degree {
       element integer_value {
          attribute rank {"0"},
          ( "0" )
       }, 
       comment
     }
  )

p1_element_degree =
  (
     ## Element degree
     element degree {
       element integer_value {
          attribute rank {"0"},
          ( "1" )
       },
       comment
     }
  )

p2_element_degree =
  (
     ## Element degree
     element degree {
       element integer_value {
          attribute rank {"0"},
          ( "2" )
       }, 
       comment
     }
  )

p3_element_degree =
  (
     ## Element degree
     element degree {
       element integer_value {
          attribute rank {"0"},
          ( "3" )
       }, 
       comment
     }
  )

generic_element =
  (
     generic_element_family,
     generic_element_degree
  )

generic_vector_element =
  (
     generic_vector_element_family,
     generic_element_degree
  )

generic_enrichment_element =
  (
     generic_enrichment_element_family,
     generic_element_degree
  )

b3_element =
  (
     b_element_family,
     p3_element_degree
  )

rt1_element =
  (
     rt_element_family,
     p1_element_degree
  )

rt2_element =
  (
     rt_element_family,
     p2_element_degree
  )

drt1_element =
  (
     drt_element_family,
     p1_element_degree
  )

drt2_element =
  (
     drt_element_family,
     p2_element_degree
  )

p1_element =
  (
     cg_element_family,
     p1_element_degree
  )

p2_element =
  (
     cg_element_family,
     p2_element_degree
  )

p0_element =
  (
     dg_element_family,
     p0_element_degree
  )

p1dg_element =
  (
     dg_element_family,
     p1_element_degree
  )

p2dg_element =
  (
     dg_element_family,
     p2_element_degree
  )

p0r_element =
  (
     r_element_family,
     p0_element_degree
  )

quadrature_element =
  (
     q_element_family,
     quadrature_element_degree
  )

vector_element_options =
  (
    ## The size (length) of the vector.
    element size {
      integer
    }?
  )

tensor_element_options =
  (
    ## The shape of the tensor.
    element shape {
      integer_2_vector
    }?,
    ## Tensor symmetry.
    element symmetric {
      comment
    }?
  )

enrichment_options = 
  (
    element enrichment {
      element_options_enrichment
    }?
  )

element_options_enrichment =
  (
    (
       element element {
         attribute name { "UserDefined" },
         generic_enrichment_element,
         comment
       }|
       ## Options describing a
       element element {
         attribute name { "B3" },
         b3_element,
         comment
       }
    )
  )

element_options_scalar = element_options_scalar_not_lagrange
element_options_scalar |= element_options_scalar_lagrange
element_options_scalar |= element_options_scalar_user

element_options_scalar_user =
  (
     (
       ## Options describing a user defined finite element.
       element element {
         attribute name { "UserDefined" },
         generic_element,
         enrichment_options,
         comment
       }
     )
  )

element_options_scalar_lagrange_visualization =
  (
     (
       ## Options describing piecewise linear continuous Lagrange finite element.
       element element {
         attribute name { "P1" },
         p1_element,
         comment
       }|
       ## Options describing piecewise quadratic continuous Lagrange finite element.
       element element {
         attribute name { "P2" },
         p2_element,
         comment
       }|
       ## Options describing piecewise linear discontinuous Lagrange finite element.
       element element {
         attribute name { "P1DG" },
         p1dg_element,
         comment
       }|
       ## Options describing piecewise quadratic discontinuous Lagrange finite element.
       element element {
         attribute name { "P2DG" },
         p2dg_element,
         comment
       }
     )
  )

element_options_scalar_lagrange =
  (
     (
       ## Options describing piecewise linear continuous Lagrange finite element.
       element element {
         attribute name { "P1" },
         p1_element,
         enrichment_options,
         comment
       }|
       ## Options describing piecewise quadratic continuous Lagrange finite element.
       element element {
         attribute name { "P2" },
