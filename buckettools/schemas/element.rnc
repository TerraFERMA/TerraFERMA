       element element {
         attribute name { "P0R" },
         p0r_element,
         vector_element_options,
         comment
       }|
       ## Options describing a piecewise constant quadrature element for a vector.
       element element {
         attribute name { "Quadrature" },
         quadrature_element,
         vector_element_options,
         comment
       }
     )
  )

