       element element {
         attribute name { "P0" },
         p0_element,
         vector_element_options,
         enrichment_options,
         comment
       }|
       ## Options describing first degree Raviart-Thomas element for a vector.
       element element {
         attribute name { "RT1" },
         rt1_element,
         enrichment_options,
         comment
       }|
       ## Options describing second degree Raviart-Thomas element for a vector.
       element element {
         attribute name { "RT2" },
         rt2_element,
         comment
